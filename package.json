{
  "name": "cardano-graphql",
  "version": "0.1.0",
  "description": "GraphQL API for Cardano with client-consumable types generated",
  "main": "/dist/index.js",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && npm run codegen && tsc",
    "dev": "concurrently \"npm run codegen --watch\" \"ts-node-dev --no-notify --respawn --transpileOnly  src/index.ts\"",
    "codegen": "graphql-codegen",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "start": "node dist/index.js",
    "test": "npm run lint && npm run build && NODE_ENV=test nyc mocha",
    "test:coverage": "npm test && http-server coverage"
  },
  "contributors": [
    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)",
    "Sam Jeston <sam.jeston@iohk.io> (https://iohk.io)"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "apollo-datasource": "^0.6.1",
    "apollo-server": "^2.8.0",
    "express": "^4.16.4",
    "graphql": "^14.4.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.4.0",
    "@graphql-codegen/typescript": "^1.4.0",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.4.0",
    "@graphql-codegen/typescript-resolvers": "^1.4.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.1",
    "@types/graphql": "^14.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "apollo-server-core": "^2.8.1",
    "apollo-server-testing": "^2.8.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^4.1.1",
    "dataloader": "^1.4.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "graphql-tag": "^2.10.1",
    "http-server": "^0.11.1",
    "mocha": "^6.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.4.1",
    "sinon-chai": "^3.3.0",
    "ts-custom-error": "^3.1.1",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
